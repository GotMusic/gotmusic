{
  "name": "gotmusic",
  "private": true,
  "packageManager": "yarn@4.3.1",
  "engines": {
    "node": ">=20.11.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "corepack enable",
    "ci:install": "corepack yarn install --immutable",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "biome:lint": "biome check .",
    "biome:fix": "biome check . --write",
    "tokens:build": "yarn workspace @gotmusic/tokens build",
    "tokens:check": "yarn workspace @gotmusic/tokens check",
    "fixtures:check": "yarn workspace @gotmusic/fixtures typecheck",
    "docs:check": "node scripts/check-docs.mjs",
    "ready": "yarn install --immutable && yarn tokens:build",
    "ci:local": "yarn install --immutable && yarn tokens:build && yarn biome:fix && yarn biome:lint && yarn typecheck && yarn build",
    "worker:process": "yarn workspace @gotmusic/worker process",
    "sec:console": "biome lint apps/web/src --error-on-warnings",
    "sec:secrets": "gitleaks detect --no-banner --redact --config=.github/gitleaks.toml",
    "perf:analyze": "node scripts/e18e-analyze.mjs",
    "perf:e18e": "npx @e18e/cli analyze",
    "perf:storybook": "node scripts/storybook-performance.mjs",
    "perf:dashboard": "node scripts/e18e-dashboard.mjs",
    "perf:ui-optimize": "node scripts/e18e-ui-optimize.mjs",
    "perf:migrate": "npx @e18e/cli migrate --interactive",
    "perf:check": "yarn perf:analyze && yarn perf:e18e",
    "perf:ci": "node scripts/performance-ci.mjs",
    "perf:dashboard:new": "node scripts/performance-dashboard.mjs",
    "perf:monitor": "yarn perf:analyze && yarn perf:dashboard:new",
    "storybook:perf": "node scripts/storybook-performance.mjs",
    "storybook:monitor": "yarn storybook:perf && open .storybook-performance-dashboard.html"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@swc/core": "^1.8.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "drizzle-kit": "^0.31.5",
    "semver": "^7.6.3",
    "sharp": "^0.34.4",
    "tsx": "^4.20.6",
    "turbo": "2.1.3",
    "typescript": "5.6.3"
  },
  "resolutions": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.0",
    "zod": "^4.1.12",
    "vite": "5.4.10",
    "rollup": "^4.22.0"
  },
  "dependencies": {
    "@avail-project/nexus-core": "^0.0.2",
    "@aws-sdk/client-s3": "^3.908.0",
    "@aws-sdk/s3-request-presigner": "^3.908.0",
    "@ethereum-attestation-service/eas-sdk": "^2.9.0",
    "@lighthouse-web3/sdk": "^0.4.3",
    "@lit-protocol/sdk-nodejs": "1.1.250",
    "@openzeppelin/contracts": "^5.4.0",
    "@privy-io/react-auth": "^3.4.1",
    "better-sqlite3": "^12.4.1",
    "drizzle-orm": "^0.44.6",
    "viem": "^2.38.4",
    "yaml": "^2.6.1"
  }
}
