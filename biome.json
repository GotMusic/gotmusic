{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "organizeImports": { "enabled": true },
  "files": {
    "ignore": [
      "**/node_modules/**",
      "packages/tokens/dist/**",
      "dist/**",
      "build/**",
      "apps/web/.next/**",
      ".turbo/**"
    ]
  }
}
