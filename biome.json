{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["error", "warn"]
          }
        }
      }
    }
  },
  "organizeImports": { "enabled": true },
  "files": {
    "ignore": [
      "**/node_modules/**",
      "packages/tokens/dist/**",
      "dist/**",
      "build/**",
      "apps/web/.next/**",
      "apps/web/playwright-report/**",
      "apps/web/test-results/**",
      "apps/web/src/stories/**",
      "apps/web/tests/**",
      "apps/web/src/server/db/**",
      "apps/web/scripts/**",
      "scripts/**",
      "apps/web/playwright.config.ts",
      ".turbo/**"
    ]
  }
}
