{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": { "dependsOn": ["^build"], "outputs": [".next/**", "dist/**", "drizzle/**"] },
    "dev": { "cache": false, "persistent": true },
    "test": { "dependsOn": ["build"] },
    "typecheck": { "dependsOn": ["^typecheck"] },
    "lint": { "dependsOn": [] },
    "process": { "cache": false, "persistent": false }
  }
}
