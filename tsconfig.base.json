{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowJs": false,
    "types": ["node", "react"]
  },
  "exclude": ["node_modules", "dist", "build", ".turbo", ".next"]
}
