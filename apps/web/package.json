{
  "name": "@gotmusic/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "yarn workspaces foreach -p -A --include @gotmusic/tokens --include @gotmusic/ui run build",
    "dev": "next dev -p 3000",
    "build": "next build",
    "prestart": "yarn workspaces foreach -p -A --include @gotmusic/tokens --include @gotmusic/ui run build",
    "start": "next start -p 3000",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build -o storybook-static",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "playwright:install": "playwright install chromium",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx src/server/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "db:test": "tsx src/server/db/test-both.ts",
    "db:push:test": "DRIZZLE_TEST=1 drizzle-kit push",
    "db:seed:test": "tsx src/server/db/seed.ts --env test",
    "db:reset:test": "yarn db:push:test && yarn db:seed:test",
    "db:reset:ci": "yarn db:push && yarn db:seed",
    "generate:openapi": "tsx scripts/generate-openapi.ts"
  },
  "dependencies": {
    "@gotmusic/api": "workspace:*",
    "@gotmusic/fixtures": "workspace:*",
    "@gotmusic/tokens": "workspace:*",
    "@gotmusic/ui": "workspace:*",
    "@tanstack/react-query": "^5.62.14",
    "@tanstack/react-query-devtools": "^5.62.14",
    "@types/pg": "^8.15.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "next": "15.5.4",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.65.0",
    "ulid": "^3.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@playwright/test": "^1.56.0",
    "@storybook/addon-a11y": "8.6.14",
    "@storybook/addon-backgrounds": "8.6.14",
    "@storybook/addon-controls": "8.6.14",
    "@storybook/addon-docs": "8.6.14",
    "@storybook/addon-links": "8.6.14",
    "@storybook/react": "8.6.14",
    "@storybook/react-vite": "8.6.14",
    "@types/swagger-ui-react": "^5",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.31.5",
    "postcss": "^8.4.47",
    "storybook": "8.6.14",
    "swagger-ui-react": "^5.29.4",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.20.6",
    "vite": "5.4.10"
  }
}
